<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"/>

    <TextView
        android:id="@+id/title1"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="기운이"
        android:textSize="50dp"
        android:fontFamily="@font/euljiro"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintTop_toTopOf="@id/guideLine5"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="통하였습니다"
        android:textSize="50dp"
        android:fontFamily="@font/euljiro"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintTop_toBottomOf="@id/title1"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="이 번호는 다시 볼 수 없습니다."
        android:textSize="24dp"
        android:fontFamily="@font/euljiro"
        android:textColor="@color/colorRed"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintTop_toBottomOf="@id/title2"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/subtitleBlue1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="기억하셔야 합니다."
        android:textSize="20dp"
        android:fontFamily="@font/euljiro"
        android:textColor="@color/colorBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintTop_toBottomOf="@id/subtitle"/>

    <TextView
        android:id="@+id/subtitleBlue2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="오직 본인만 사용하셔야 합니다."
        android:textSize="20dp"
        android:fontFamily="@font/euljiro"
        android:textColor="@color/colorBlue"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintTop_toBottomOf="@id/subtitleBlue1"/>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_01"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintEnd_toStartOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/guideLine1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine2"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_02"
        app:layout_constraintStart_toEndOf="@id/imageView1"
        app:layout_constraintEnd_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/guideLine1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine2"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_03"
        app:layout_constraintStart_toEndOf="@id/imageView2"
        app:layout_constraintEnd_toStartOf="@id/guideLine4"
        app:layout_constraintTop_toTopOf="@id/guideLine1"
        app:layout_constraintBottom_toBottomOf="@id/guideLine2"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_04"
        app:layout_constraintStart_toStartOf="@id/guideLine3"
        app:layout_constraintEnd_toStartOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@id/guideLine2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine6"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_05"
        app:layout_constraintStart_toEndOf="@id/imageView4"
        app:layout_constraintEnd_toStartOf="@id/imageView6"
        app:layout_constraintTop_toTopOf="@id/guideLine2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine6"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ball_06"
        app:layout_constraintStart_toEndOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/guideLine4"
        app:layout_constraintTop_toTopOf="@id/guideLine2"
        app:layout_constraintBottom_toBottomOf="@id/guideLine6"
        app:layout_constraintVertical_bias="0.5"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg1"
        app:layout_constraintTop_toBottomOf="@id/guideLine7"
        app:layout_constraintBottom_toBottomOf="parent">

    </TextView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/finishButton"
        android:text="확인(앱종료)"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlue"
        android:fontFamily="@font/euljiro"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="36dp"
        android:elevation="4dp"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>